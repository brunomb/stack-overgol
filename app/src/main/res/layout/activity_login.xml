<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:labelled_marquee="http://schemas.android.com/apk/res-auto"
    tools:context="com.github.brunomb.stackovergol.activity.login.LoginActivity"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/stackOvergolBackGround"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sog_login_im_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/stack_overgol_icon"
        android:contentDescription="@string/sog_login_id_logo" />

    <com.github.guilhermesgb.marqueeto.LabelledMarqueeEditText
        android:id="@+id/sog_login_et_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/sog_login_et_email"
        labelled_marquee:labelledMarqueeEditTextStyle="@style/MarqueetoEditTextStyle"
        labelled_marquee:mode="edit"/>

    <com.github.guilhermesgb.marqueeto.LabelledMarqueeEditText
        android:id="@+id/sog_login_et_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="@string/sog_login_et_password"
        labelled_marquee:labelledMarqueeEditTextStyle="@style/MarqueetoEditTextStyle"
        labelled_marquee:mode="edit"/>

    <Button
        android:id="@+id/sog_login_bt_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/sog_login_bt_login"
        android:background="@color/loginBTBackGround"
        android:textColor="@color/loginBTText"
        android:layout_marginTop="21dp" />

</LinearLayout>
